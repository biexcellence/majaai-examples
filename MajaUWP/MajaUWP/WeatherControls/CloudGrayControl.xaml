<UserControl
    x:Class="MajaUWP.WeatherControls.CloudGrayControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="215"
    d:DesignWidth="215">
    <Grid>
        <Viewbox Grid.Row="1">
            <Canvas Width="215" Height="215">
                <Path Fill="{StaticResource GrayBrush}" Stroke="LightGray" StrokeThickness="1">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="180,170">
                                <LineSegment Point="25,170"/>
                                <ArcSegment Size="35,35" RotationAngle="0" IsLargeArc="False" SweepDirection="Clockwise" Point="60,92"/>
                                <ArcSegment Size="40,35" RotationAngle="0" IsLargeArc="False" SweepDirection="Clockwise" Point="155,90"/>
                                <ArcSegment Size="40,35" RotationAngle="0" IsLargeArc="False" SweepDirection="Clockwise" Point="180,170"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>