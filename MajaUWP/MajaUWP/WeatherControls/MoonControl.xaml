<UserControl
    x:Class="MajaUWP.WeatherControls.MoonControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="255"
    d:DesignWidth="255">
    <Grid>
        <Viewbox>
            <Canvas Width="255" Height="255">
                <Path Stroke="SlateGray" StrokeThickness="1" Fill="{StaticResource MoonBrush}">
                    <Path.Data>
                        <PathGeometry>
                            <PathFigure StartPoint="95,0">
                                <ArcSegment Size="129,130" RotationAngle="0" IsLargeArc="True" SweepDirection="Counterclockwise" Point="240,200"/>
                                <ArcSegment Size="135,135" RotationAngle="300" IsLargeArc="False" SweepDirection="Clockwise" Point="95,0"/>
                            </PathFigure>
                        </PathGeometry>
                    </Path.Data>
                </Path>
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>
