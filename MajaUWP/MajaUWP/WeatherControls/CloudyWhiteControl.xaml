<UserControl
    x:Class="MajaUWP.WeatherControls.CloudyWhiteControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="using:MajaUWP.WeatherControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
      d:DesignHeight="180"
    d:DesignWidth="180">
    <Grid>
        <Viewbox>
            <Canvas Width="180" Height="180">
                <controls:CloudWhiteControl Height="150"/>
                <controls:CloudWhiteControl Canvas.Top="40" Canvas.Left="30" Height="150"/>
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>