<UserControl
    x:Class="MajaUWP.WeatherControls.ThunderstormControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
xmlns:controls="using:MajaUWP.WeatherControls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="200"
    d:DesignWidth="200">
    <Grid>
        <Viewbox>
            <Canvas Width="200" Height="200">

                <controls:CloudGrayControl Height="160" Canvas.Left="40" Canvas.Top="-10"/>
                <controls:CloudWhiteControl Height="160" Canvas.Top="20"/>
                <controls:LightningBoltControl Canvas.Top="105" Canvas.Left="10"/>
                <controls:LightningBoltControl Canvas.Top="120" Canvas.Left="70" Height="65"/>
            </Canvas>
        </Viewbox>
    </Grid>
</UserControl>